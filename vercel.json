{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": { 
          "includeFiles": [
            "templates/**",
            "static/**"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1",
        "headers": {
          "Cache-Control": "public, max-age=31536000, immutable"
        }
      },
      { 
        "src": "/(.*)", 
        "dest": "api/index.py" 
      }
    ]
  }